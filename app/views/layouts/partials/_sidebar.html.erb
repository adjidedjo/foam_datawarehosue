<!-- START Sidebar (left)-->
<div class="aside-inner">
  <nav class="sidebar" data-sidebar-anyclick-close="">
    <!-- START sidebar nav-->
    <ul class="nav">
      <!-- START user info-->
      <li class="has-user-block">
        <div id="user-block" class="collapse">
          <div class="item user-block">
            <!-- User picture-->
            <div class="user-block-picture">
              <div class="user-block-status">
                <div class="circle circle-success circle-lg"></div>
              </div>
            </div>
            <!-- Name and Job-->
            <div class="user-block-info">
              <span class="user-block-name">Hello, <%= current_user.username %></span>
              <span class="user-block-role"><%= current_user.position.upcase %></span>
            </div>
          </div>
        </div>
      </li>
      <!-- END user info-->
      <li class="nav-heading"></li>
      <!-- Iterates over all sidebar items-->

      <li class="<%= 'active' if controller?('penjualan') %>">
        <a href="#sales" title="Sales Foam" data-toggle="collapse"> <em class="fa fa-laptop"></em> <span><b>Penjualan</b></span> </a>
        <ul id="sales" class="nav sidebar-subnav collapse">
          <li class="sidebar-subnav-header">
            Penjualan
          </li>
          <li class="<%= 'active' if controller?('penjualan/nasional/recaps') && action?('recap') %>">
            <a href="/penjualan/nasional/recaps/recap" title="Sales Nasional"> <span>NASIONAL</span> </a>
          </li>
          <li class="<%= 'active' if controller?('penjualan/industri/industries') && action?('recap') %>">
            <a href="/penjualan/industri/industries/recap" title="Sales Nasional"> <span>INDUSTRI</span> </a>
          </li>
          <li class="<%= 'active' if controller?('penjualan/retail/retails') && action?('recap') %>">
            <a href="/penjualan/retail/retails/recap" title="Sales Nasional"> <span>RETAIL</span> </a>
          </li>
        </ul>
      </li>
    </ul>
    <!-- END sidebar nav-->
  </nav>
</div>
