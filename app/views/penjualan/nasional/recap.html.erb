<div class="content-heading">
  Dashboard Customer Nasional Report In <b><%= params[:date].present? ? Date::MONTHNAMES[params[:date][:month].to_i] : Date::MONTHNAMES[Date.today.month] %>
  <%= params[:date].present? ? params[:date][:year] : Date.today.year %></b>
</div>

<div class="row">
  <div class="col-lg-12">
    <!-- START content-->
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Sales Report by Sub-Brand
          </div>
          <div class="panel-body">
            <table id="nasional_bybrand" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Sub-Brand</th>
                  <th><%= Date.today.strftime("%B") %></th>
                  <th><%= 1.months.ago.strftime("%B") %></th>
                  <th><%= 2.months.ago.strftime("%B") %></th>
                  <th><%= 3.months.ago.strftime("%B") %></th>
                </tr>
              </thead>
              <tbody>
                <% @bybrand.each do |bb| %>
                <tr class="gradeX">
                  <th><%= bb.subbrand %></th>
                  <td><%= bb.monthnow.nil? ? 0 : currency(bb.monthnow) %></td>
                  <td><%= bb.month1.nil? ? 0 : currency(bb.month1) %></td>
                  <td><%= bb.month2.nil? ? 0 : currency(bb.month2) %></td>
                  <td><%= bb.month3.nil? ? 0 : currency(bb.month3) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!-- END content-->
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <!-- START content-->
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Sales Report by Customer
          </div>
          <div class="panel-body">
            <table id="table-revenue-products" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Customer</th>
                  <th>Kota</th>
                  <th>Salesman</th>
                  <th><%= Date.today.strftime("%B") %></th>
                  <th><%= 1.months.ago.strftime("%B") %></th>
                  <th><%= 2.months.ago.strftime("%B") %></th>
                  <th><%= 3.months.ago.strftime("%B") %></th>
                </tr>
              </thead>
              <tbody>
                <% @customer.each do |cus| %>
                <tr class="gradeX">
                  <td><%= cus.customer_desc %></td>
                  <td><%= cus.kota %></td>
                  <td><%= cus.salesman %></td>
                  <td><%= cus.monthnow.nil? ? 0 : currency(cus.monthnow) %></td>
                  <td><%= cus.month1.nil? ? 0 : currency(cus.month1) %></td>
                  <td><%= cus.month2.nil? ? 0 : currency(cus.month2) %></td>
                  <td><%= cus.month3.nil? ? 0 : currency(cus.month3) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!-- END content-->
  </div>
</div>
